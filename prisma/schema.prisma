// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model username {
  id       Int     @id @default(autoincrement())
  username String
  pixel    pixel[]
}

model color {
  id    Int     @id @default(autoincrement())
  color String
  pixel pixel[]
}

model coordinate_x {
  id           Int     @id @default(autoincrement())
  coordinate_x String
  pixel        pixel[]
}

model coordinate_y {
  id           Int     @id @default(autoincrement())
  coordinate_y String
  pixel        pixel[]
}

model pixel {
  id              Int          @id @default(autoincrement())
  username_fk     Int
  color_fk        Int
  coordinate_x_fk Int
  coordinate_y_fk Int
  username        username     @relation(fields: [username_fk], references: [id])
  color           color        @relation(fields: [color_fk], references: [id])
  coordinate_x    coordinate_x @relation(fields: [coordinate_x_fk], references: [id])
  coordinate_y    coordinate_y @relation(fields: [coordinate_y_fk], references: [id])
}
